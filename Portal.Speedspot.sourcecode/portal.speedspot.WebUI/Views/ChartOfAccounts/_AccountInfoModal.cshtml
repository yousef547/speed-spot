
@model FinancialAccountViewModel

<form id="accountInfoForm">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ParentId" />
    <input type="hidden" asp-for="DepartmentId" />
    <input type="hidden" asp-for="AutoCode" />
    <input type="hidden" asp-for="Type" value="@((int)Model.Type)"/>
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label class="control-label" asp-for="Name"></label>
                        <input class="form-control inp-height" asp-for="Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label class="control-label" asp-for="NameAr"></label>
                        <input class="form-control inp-height" asp-for="NameAr" />
                        <span asp-validation-for="NameAr" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label class="control-label" asp-for="Code"></label>
                        <input class="form-control inp-height" asp-for="Code" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label class="control-label" asp-for="GeneratedCode"></label>
                        <input class="form-control inp-height" asp-for="GeneratedCode" disabled />
                        <span asp-validation-for="GeneratedCode" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-end">
        <div class="col-6">
            <div class="action action-modal">
                <button class="btn" type="button" id="btnCreate" onclick="createAccount()">
                    <i class="fas fa-plus"></i> @SharedLocalizer["Add"]
                </button>
                <button class="btn d-none" type="button" id="btnUpdate" onclick="updateAccount()">
                    <i class="fas fa-edit"></i> @SharedLocalizer["Update"]
                </button>
            </div>
        </div>
    </div>
</form>
