
@model CountryViewModel

@{
    ViewData["Title"] = SharedLocalizer.IsRightToLeft() ? Model.NameAr : Model.Name;
    ViewData["Level1Section"] = SharedLocalizer["Lookups"].Value;
    ViewData["Level2Section"] = SharedLocalizer["Countries"].Value;
    ViewData["Level2Url"] = Url.Action("Index");
    ViewData["Level3Section"] = SharedLocalizer["Edit"].Value + " " + SharedLocalizer["Country"].Value;
}

@section HeaderActions{
    <button class="btn btn-outline-success mx-2 headres-action-global" value="Save" onclick="saveForm()">
        <i class="fas fa-check"></i> @SharedLocalizer["Update"]
    </button>

    <a asp-action="Index" class="btn btn-outline-danger mx-2 show-loader headres-action-global">
        <i class="fas fa-times"></i> @SharedLocalizer["Cancel"]
    </a>
}

<form method="post" asp-action="Edit" class="d-inline" id="countriesForm">
    <div class="form-global-inp mx-4">
        <div class="">
            <input asp-for="Id" type="hidden" />
            <input asp-for="IsArchived" type="hidden" />

            <div class="row">
                <div class="col-12 col-lg-4">
                    <div class="form-group">
                        <label class="control-label" asp-for="Name"></label>
                        <input class="form-control inp-height" asp-for="Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-12 col-lg-4">
                    <div class="form-group">
                        <label class="control-label" asp-for="NameAr"></label>
                        <input class="form-control  inp-height" asp-for="NameAr" />
                        <span asp-validation-for="NameAr" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-12 col-lg-4">
                    <div class="form-group">
                        <label class="control-label" asp-for="PhoneCode"></label>
                        <input class="form-control  inp-height" asp-for="PhoneCode" />
                        <span asp-validation-for="PhoneCode" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12 col-lg-6">
                    <div class="form-group">
                        <label class="control-label" asp-for="Code2"></label>
                        <input class="form-control  inp-height" asp-for="Code2" />
                        <span asp-validation-for="Code2" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-12 col-lg-6">
                    <div class="form-group">
                        <label class="control-label" asp-for="Code3"></label>
                        <input class="form-control  inp-height" asp-for="Code3" />
                        <span asp-validation-for="Code3" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <script src="~/js/countries.js"></script>
}