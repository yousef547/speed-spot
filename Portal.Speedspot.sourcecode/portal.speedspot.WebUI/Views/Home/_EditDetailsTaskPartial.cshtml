@model TaskViewModel

@if (Model != null)
{

    <form class="add-tasks" id="editTaskForm">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="CreatedById" />
        <input type="hidden" asp-for="CreatedDate" />

        @*<i class="fas fa-plus"></i>*@
        <span>@SharedLocalizer["AddTask"]</span>
        <div class="row">
            <div class="col-md-6">
                <label asp-for="Title" class="control-label label-sales-information"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="AssignedToId" class="label-sales-information"></label>
                <select class="select-no-border-white form-control" id="AssignedToId" asp-for="AssignedToId" asp-items="@(new SelectList(ViewBag.TaskAssignedToId as List<UserViewModel>, "Id", "Name"))">
                    <option value="">@SharedLocalizer["Select"]</option>
                </select>
                <span asp-validation-for="AssignedToId" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="PriorityLevel" class="label-sales-information"></label>
                <select class="select-no-border-white form-control inp-height form-control" id="priorityLevels" asp-for="PriorityLevel" asp-items="@ViewBag.PriorityLevels">
                    <option value="" selected>@SharedLocalizer["Select"]</option>
                </select>
                <span asp-validation-for="PriorityLevel" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Deadline" class="control-label label-sales-information"></label>
                <input asp-for="Deadline" class="form-control" />
                <span asp-validation-for="Deadline" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Description" class="control-label label-sales-information"></label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            @if (Model.PagePath != null)

            {

                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="check-done">
                                <div class="icheck-primary">
                                    <input type="checkbox" asp-for="IsSavePage">
                                    <label asp-for="IsSavePage"></label>
                                </div>
                            </div>
                        </div>
                        <input type="hidden" asp-for="PagePath" />
                        <div class="col-md-6">
                            <a class="go-to-link" href="@Model.PagePath">@SharedLocalizer["GoToLink"]</a>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <input type="hidden" asp-for="PagePath" />
            }
        </div>
    </form>
}