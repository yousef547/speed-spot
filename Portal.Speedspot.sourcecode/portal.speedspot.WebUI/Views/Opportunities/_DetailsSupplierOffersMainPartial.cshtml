
@model OpportunityViewModel

<ul class="nav nav-pills mainTab-details" id="supplierTab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="request-offer-tab" data-toggle="tab" href="#request-offer" role="tab" aria-controls="request-offer" aria-selected="true">
            @SharedLocalizer["SupplierOffers_RequestOffers"]
            <span id="requestOffersNo" class=" mx-1">@Model.RequestOffersNo</span>
        </a>
    </li>

    @if ((await AuthorizationService.AuthorizeAsync(User, Permissions.Opportunities.ViewSupplierOffers)).Succeeded)
    {
        <li class="nav-item ">
            <a class="nav-link" id="supplier-offer-tab" data-toggle="tab" href="#supplier-offer" role="tab" aria-controls="supplier-offer" aria-selected="false">
                @SharedLocalizer["SupplierOffers_SupplierOffers"]
                <span id="supplierOffersNo" class=" mx-1">@Model.SupplierOffersNo</span>
            </a>
        </li>
    }
</ul>

<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="request-offer" role="tabpanel" aria-labelledby="request-offer-tab">
        @await Html.PartialAsync("_DetailsSupplierOffers_RequestOffersPartial", Model)
    </div>
    <div class="tab-pane fade" id="supplier-offer" role="tabpanel" aria-labelledby="supplier-offer-tab">
        @await Html.PartialAsync("_DetailsSupplierOffers_SupplierOffersPartial", Model)
    </div>
</div>
