<div class="modal fade modal-edit-task" id="modalSupplier" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl ">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@SharedLocalizer["NewSupplier"]</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body" id="">
                @await Html.PartialAsync("_AddSupplierFormPartial", new CreateSupplierViewModel())
            </div>
            <div class="modal-footer d-flex justify-content-center">
                <div class="action action-modal">
                    <a onclick="addSupplier()" class="btn-update">
                        @SharedLocalizer["Add"]
                    </a>
                    <button type="button" class="btn-cancel" data-dismiss="modal" aria-label="Close">
                        @SharedLocalizer["Cancel"]
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>