
<div class="modal fade" id="selectProductsModal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@SharedLocalizer["SelectItem"]</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <label id="productDepartmentNames" class="department-names"></label>
                <div class="row">
                    <div class="col-3">
                        <button type="button" class="toggle-prod-serv btn active" id="btnSelectProducts">@SharedLocalizer["Products1"]</button>
                    </div>
                    <div class="col-3">
                        <button type="button" class="toggle-prod-serv btn" id="btnSelectServices">@SharedLocalizer["Services"]</button>
                    </div>
                </div>
                <div class="category-products-list">
                    <input type="hidden" id="departmentIds" />
                    <div id="left" class="span3">
                        <ul id="productsModal" class="nav menu">
                            @await Html.PartialAsync("_CategoriesSelectPartial", new List<IGrouping<string, ProductCategoryViewModel>>())
                        </ul>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="action">
                    <a class="btn" id="saveSelectedItem">@SharedLocalizer["Save"]</a>
                </div>
            </div>
        </div>
    </div>
</div>
