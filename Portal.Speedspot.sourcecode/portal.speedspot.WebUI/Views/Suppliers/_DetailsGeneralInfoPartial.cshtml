
@model SupplierViewModel

@*Start First Row*@
<div class="card mx-4 details-partial-tabs">
    <div class="card-body">

        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Name" class="text-details"></label>
                    <p class="details-label">@Model.Name</p>
                </div>
            </div>

            <div class="col-md-4 text-left">
                <div class="form-group">
                    <label asp-for="SubName" class="text-details"></label>
                    <p class="details-label">@Model.SubName</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label class="text-details" asp-for="NameAr"></label>
                    <div class=" position-relative">
                        <p class="details-label">@Model.NameAr</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Email" class="text-details"></label>
                    <p class="details-label">@Model.Email</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="WebsiteUrl" class="text-details"></label>
                    <p class="details-label">@Model.WebsiteUrl</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="ActivityTypeId" class="text-details"></label>
                    <div class="">
                        <p class="details-label">@(SharedLocalizer.IsRightToLeft() ? Model.ActivityTypeNameAr : Model.ActivityTypeName)</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="OrganizationTypeId" class="text-details"></label>
                    <p class="details-label">@(SharedLocalizer.IsRightToLeft() ? Model.OrganizationTypeNameAr : Model.OrganizationTypeName)</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label class="text-details" asp-for="ClassificationIds"></label>
                    <p class="details-label">@(SharedLocalizer.IsRightToLeft() ? Model.ClassificationStrAr : Model.ClassificationStr)</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Rank" class="text-details"></label>
                    <div class="">
                        <p class="details-label">@Model.Rank / 100</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="DepartmentIds" class="text-details"></label>
                    <p class="details-label">@(SharedLocalizer.IsRightToLeft() ? Model.DepartmentsStrAr : Model.DepartmentsStr)</p>
                </div>
            </div>

            @*<div class="col-md-4">
                <div class="form-group">
                <label class="text-details">Agency</label>
                <p class="details-label">Oscar</p>
                </div>
                </div>*@

            @if (Model.IsAgency)
            {
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="text-details" asp-for="CompetitorId"></label>
                        @if (Model.CompetitorId != null)
                        {
                            <p class="details-label">
                                @(SharedLocalizer.IsRightToLeft() ? Model.CompetitorNameAr : Model.CompetitorName)
                            </p>
                        }
                        else
                        {
                            <p class="details-label">
                                @(SharedLocalizer.IsRightToLeft() ?
                        (ViewBag.CompanyData as CompanyDataViewModel).NameAr : (ViewBag.CompanyData as CompanyDataViewModel).Name)
                            </p>
                        }

                    </div>
                </div>
            }

            @if (Model.ParentId != null)
            {
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="text-details" asp-for="ParentId"></label>
                        <p class="details-label">@(SharedLocalizer.IsRightToLeft() ? Model.ParentNameAr : Model.ParentName)</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@*Start Second Row*@
<div class="row details-partial-tabs mt-4">
    <div class="col-md-3">
        <h3 class="head-box">@SharedLocalizer["LegalInfo"]:</h3>
        <div class="item">
            <div class="form-group">
                <label asp-for="LegalInfoVM.TaxCardNumber" class="text-details"></label>
                <p class="details-label">@(Model.LegalInfoVM != null ? Model.LegalInfoVM.TaxCardNumber : "")</p>
            </div>

            <div class="form-group">
                <label asp-for="LegalInfoVM.CommercialRegister" class="text-details"></label>
                <p class="details-label">@(Model.LegalInfoVM != null ? Model.LegalInfoVM.CommercialRegister : "")</p>
            </div>

            <div class="form-group">
                <label asp-for="LegalInfoVM.VatNumber" class="text-details"></label>
                <p class="details-label">@(Model.LegalInfoVM != null ? Model.LegalInfoVM.VatNumber : "")</p>
            </div>

            <div class="form-group">
                <label asp-for="LegalInfoVM.CargoXNumber" class="text-details"></label>
                <p class="details-label">@(Model.LegalInfoVM != null ? Model.LegalInfoVM.CargoXNumber : "")</p>
            </div>

            <div class="form-group">
                <label asp-for="LegalInfoVM.AttachmentId" class="text-details"></label>
                @if (Model.LegalInfoVM != null && Model.LegalInfoVM.AttachmentPath != null)
                {
                    <a href="/images/Suppliers/@Model.LegalInfoVM.AttachmentPath" class="details-label d-flex" target="_blank">
                        <i class="fas fa-file-download"></i>
                        <p class="">@Model.LegalInfoVM.AttachmentTitle</p>
                    </a>
                }
            </div>

        </div>
    </div>

    <div class="col-md-3">
        <h3 class="head-box">@SharedLocalizer["Address"]:</h3>
        <div class="item">
            <input type="hidden" asp-for="AddressVM.Latitude" />
            <input type="hidden" asp-for="AddressVM.Longitude" />
            <div class="map-sec">
                <i class="fas fa-map-marker-alt"></i>
                <p id="locationText"></p>
            </div>

            <div class="form-group">
                <label asp-for="AddressVM.CountryId" class="text-details"></label>
                <p class="details-label">@(Model.AddressVM != null ? (SharedLocalizer.IsRightToLeft() ? Model.AddressVM.CountryNameAr : Model.AddressVM.CountryName) : "")</p>
            </div>

            <div class="form-group">
                <label asp-for="AddressVM.CityId" class="text-details"></label>
                <p class="details-label">@(Model.AddressVM != null ? SharedLocalizer.IsRightToLeft() ? Model.AddressVM.CityNameAr : Model.AddressVM.CityName : "")</p>
            </div>

            <div class="form-group">
                <label asp-for="AddressVM.Street" class="text-details"></label>
                <p class="details-label">@(Model.AddressVM != null ? Model.AddressVM.Street : "")</p>
            </div>

            <div class="form-group">
                <label asp-for="AddressVM.BillingAddress" class="text-details"></label>
                <p class="details-label">@(Model.AddressVM != null ? Model.AddressVM.BillingAddress : "")</p>
            </div>

        </div>
    </div>
    <div class="col-md-6">
        <h3 class="head-box">@SharedLocalizer["Contacts"]:</h3>
        <div class="item">

            <div class="title-number">
                <p>@SharedLocalizer["Type"]</p>
                <p>@SharedLocalizer["AlNumber"]</p>
                <p class="invisible"></p>
            </div>
            @foreach (var contact in Model.ContactVMs)
            {
                <div class="mobile-and-phone">
                    <p>@(SharedLocalizer.IsRightToLeft() ? contact.ContactVM.TypeNameAr : contact.ContactVM.TypeName)</p>
                    <div class="phone-number-country">
                        <img src="/images/Flags/svg/@(contact.ContactVM.CountryCode2).svg" />
                        <p class="">+@contact.ContactVM.PhoneCodeId@contact.ContactVM.Number</p>
                    </div>
                    <p class="invisible"></p>
                </div>
            }
        </div>
    </div>
</div>

@*Start Third Row vendor List*@
<div class="row details-partial-tabs mt-5">
    @if ((await AuthorizationService.AuthorizeAsync(User, Permissions.Suppliers.ViewProducts)).Succeeded)
    {
        <div class="col-md-3">
            <h3 class="head-box">@SharedLocalizer["Products"]:</h3>
            <div class="item">
                <div class="scroll-Custom px-2" id="supplier-products">
                    @*Foreach This Section *@
                    @if (SharedLocalizer.IsRightToLeft())
                    {
                        @await Html.PartialAsync("_DetailsProductsPartial", Model.DepartmentProductsGroupingAr)
                    }
                    else
                    {
                        @await Html.PartialAsync("_DetailsProductsPartial", Model.DepartmentProductsGrouping)
                    }
                </div>
            </div>
        </div>
    }
    <div class="col-md-3">
        <h3 class="head-box">@SharedLocalizer["Files"]:</h3>
        <div class="item">
            <div class="scroll-Custom px-2" id="supplier-files">
                @*Foreach This Section *@
                @await Html.PartialAsync("_DetailsFilesPartial", Model.FileVMs)
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <h3 class="head-box">@SharedLocalizer["Certifications"]:</h3>
        <div class="item">
            <div class="scroll-Custom px-2">
                <div class="form-group">
                    <div class="d-flex justify-content-around">
                        <p class="name-attach-file-head">@SharedLocalizer["Name"]</p>
                        <p class="name-attach-file-head">@SharedLocalizer["Attachment"]</p>
                        <p class="invisible"></p>
                    </div>
                    @*Foreah Sec*@
                    @foreach (var certificate in Model.CertificateVMs)
                    {
                        <div class="item-Certificates d-flex justify-content-around align-items-center">
                            <p class="text-details-partial2">@certificate.CertificateVM.Name</p>
                            <div class="actions-uploaded">
                                <a class="file-name" href="/images/Suppliers/@certificate.CertificateVM.AttachmentPath" target="_blank">
                                    <i class="fas fa-file-upload"></i>
                                    <p class="">@certificate.CertificateVM.AttachmentTitle</p>
                                </a>
                            </div>
                            <p class="invisible"></p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@*Start Employees Row*@

<div class="row details-partial-tabs mt-5">
    <div class="col-12">
        <h3 class="head-box">@SharedLocalizer["Employees"]</h3>
        <div class="item-emp">
            <div class="table-emp">
                <div class="header-table-emp">
                    <ul class="list-unstyled">
                        <li class="name-attach-file-head">@SharedLocalizer["Name"]</li>
                        <li class="name-attach-file-head">@SharedLocalizer["Department"]</li>
                        <li class="name-attach-file-head">@SharedLocalizer["Position"]</li>
                        <li class="name-attach-file-head">@SharedLocalizer["Email"]</li>
                        <li class="name-attach-file-head">@SharedLocalizer["Phone"]</li>
                        <li class="invisible">..</li>
                    </ul>
                </div>
                <div class="table-emp-body scroll-Custom">
                    @foreach (var item in Model.EmployeeVMs)
                    {
                        <div class="box">
                            <p>@item.EmployeeVM.Name</p>
                            <p>@item.EmployeeVM.Department</p>
                            <p>@item.EmployeeVM.Position</p>
                            <p>@item.EmployeeVM.Email</p>
                            <div class="phone-number-emp">
                                <img src="/images/Flags/svg/@(item.EmployeeVM.CountryCode2).svg" />
                                <a href="tel">+@(item.EmployeeVM.PhoneCode)@item.EmployeeVM.Phone</a>
                            </div>
                            <p class="invisible"></p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>